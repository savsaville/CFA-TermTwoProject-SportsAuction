
<div class="container">
  <div class="row field green lighten-5 col s6 devise devise-box-overflow z-depth-4 offset-m3 green lighten-5 card-panel hoverable">
<p> Current Items Up for Auction </p>

<table class="highlight centered">
  <thead>
    <tr>
      <th></th>
      <th>Title</th>
      <th>Charity</th>
      <th>Sport</th>
      <th>Sponsor</th>
      <th>Description</th>
      <th>Auction Amount</th>
    </tr>
  </thead>
  <% @items.each do |item| %>
    <tbody>
      <tr>
        <td><%= image_tag item.image.url(:thumb) %></td>
        <td><%= item.title %></td>
        <td><%= item.charity%></td>
        <td><%= item.sport %></td>
        <td><%= item.sponsor%></td>
        <td><%= item.description %></td>
        <% if item.auction && item.auction.current_bid %>
          <td><%= item.auction.current_bid %></td>
        <% else %>
          <td>Currently no Bids</td>
        <% end %>
        <td><%= link_to 'Edit', edit_item_path(item) %></td>
        <td><%= link_to 'Destroy', item, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    </tbody>
  <% end %>
</table>

<p>List of users</p>

<table class="highlight centered">
    <thead>
      <tr>
        <th>User name</th>
      </tr>
    </thead>
    <% @users.each do |user| %>
      <tbody>
        <tr>
          <td><%= user.email %></td>
          <td class="grey-link">
            <%= link_to conversations_path(sender_id: current_user.id, recipient_id: user.id), method: 'post' do%>
              <i class="material-icons">email</i>
            <% end%>
          </td>
        </tr>
      </tbody>
    <% end %>
  </table>
</div>

</div>
