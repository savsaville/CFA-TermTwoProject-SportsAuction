<p id="notice"><%= notice %></p>

<h1>Items</h1>

<%= search_form_for @search do |f| %>
  <div class="field">
    <%= f.label :title_or_description_cont, "Searchy" %>
    <%= f.text_field :title_or_description_cont %>
  </div>
  <div class="actions"><%= f.submit "Search" %><div>
<% end %>


<table id="items">
  <thead>
    <tr>
      <th></th>
      <th><%= sort_link @search, :title, "Title" %></th>
      <th><%= sort_link @search, :description, "Description" %></th>
      <th><%= sort_link @search, :end_at, "Auction Closing Time" %></th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @items.each do |item| %>
      <tr>
        <td><%= image_tag item.image.url(:thumb) %></td>
        <td><%= item.title %></td>
        <td><%= item.description %></td>
        <td></td>
        <td><%= link_to 'Show', item %></td>
        <td><%= link_to 'Edit', edit_item_path(item) %></td>
        <td><%= link_to 'Destroy', item, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Item', new_item_path %>
